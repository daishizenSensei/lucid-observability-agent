  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/daishizenSensei/lucid-observability-agent"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
